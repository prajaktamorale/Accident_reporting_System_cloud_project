<div ng-controller = "adminBillingCtrl" ng-init ="getSensorUsage();">
	<div class="row">
	      <div class="span12">
		      	<div class="widget">
		      	<div class="">
  		 		 <h2 style="margin-left:45%"> Payment </h2> 
  		 	</div>
		      			<div class="widget-header">
		      				<i class="icon-add"></i>
		      				<h3>Pay your bill</h3>
						</div> <!-- /widget-header -->
	  					 
	    	  			 <div class="widget-content">
 		           
					            <!-- /.box-header -->
					            <div class="box-body no-padding">
								  			   <table class = "table table-striped hover">
												    <tr>                     
												    	
												    	<th>#</th>
												      
												       <th colspan="1">Sensor Type</th>
												        <th colspan="1">Sensor Usage</th>
													   <th colspan="1">Price($)</th>
												    </tr>
												    <tbody>
												       <tr ng-repeat="bill in adminBillUsage" >                      
												       	  
												       	  <td>{{$index+1}}</td>
												          <td>{{bill.type}}</td>
												          <td>{{bill.usage}}</td>
														  <td>{{bill.amount | currency}}</td>
												     
												       </tr>                     
												    </tbody>
												    <tfoot>
											            <tr>
											                <th></th>
												    		<th></th>
												    	 
											                <th>Usage : {{ adminBillUsage|total }} </th>
											                <th>Total Amount : {{ adminBillUsage|total:'amount'|currency }}</th>
											            </tr>
											        </tfoot>
												 </table>
									          
									           <br/>
									           
											    <button style="float: right" class="btn-primary" data-toggle="modal" data-target="#popup">Pay Bill</button>
											
					            </div>
					            <!-- /.box-body -->
		          			</div>
		           			
						</div>
		  
				 </div>
									
		<div class="modal fade" id="popup" role="dialog">
		    <div class="modal-dialog">
		    
		      <!-- Modal content-->
		      <div class="modal-content">
		        <div class="modal-header">
		          <button type="button" class="close" data-dismiss="modal">&times;</button>
		          <h4 class="modal-title">Enter Card Details</h4>
		        </div>
		         <div class="modal-body">
		        <div class="demo-container">
		        <div class="card-wrapper"></div>
		<br><br>
		   <div class="alert alert-success col-md-12" id="success-alert1" style="display: none ">
       	<center> <strong> Bill payment successful</strong></center>
       	</div>
       	
       	<div class="alert alert-danger col-md-12" id="failure-alert" style="display: none ">
       	<center> <strong> Error while paying the sensor. Please try again </strong></center>
       	</div>
       	
		        <div class="form-container active">
		            <form action="">
		            <div class="form-group">
		            <label for="firstname">Card Number:</label>
		                <input placeholder="Card number" type="text" name="number" class="form-control ng-model="cardNumber">
		                </div>
		<div class="form-group">
		<label for="firstname">Full Name:</label>
		                <input placeholder="Full name" type="text" name="name" class="form-control" ng-model="cardHolderName">
		                </div>
		                <div class="form-group">
		                <label for="firstname"> Expiry:</label>
		                <input placeholder="MM/YY" type="text" name="expiry" class="form-control" ng-model="expiry">
		                </div>
		                <div class="form-group">
		                <label for="firstname">CVV:</label>
		                <input placeholder="CVC" type="text" name="cvc" class="form-control" ng-model="cvv">
		                </div>
		                <button type="submit" class="btn btn-primary" name="save" id="save" ng-click="paymentInvoice()">Pay</button>
		          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		            </form>
		        </div>
		    </div>
    </div>
  
</div>
		  								
	 