<div ng-controller = "manageSensorCtrl" ng-init ="getSensorDetails();">

	<div class="alert alert-success col-md-12" id="delete-success" style="display: none ">
	<center> <strong> Successfully deleted the sensor</strong></center>
	</div>
	
	<div class="alert alert-danger col-md-12" id="delete-fail" style="display: none ">
	<center> <strong> Error while deleting the sensor. Please try again </strong></center>
	</div>

	<div class="alert alert-success col-md-12" id="activate-success" style="display: none ">
	<center> <strong> Successfully activated the sensor</strong></center>
	</div>
	
	<div class="alert alert-danger col-md-12" id="activate-fail" style="display: none ">
	<center> <strong> Error while activating the sensor. Please try again </strong></center>
	</div>
	
	<div class="alert alert-success col-md-12" id="deactivate-success" style="display: none ">
	<center> <strong> Successfully deactivated the sensor</strong></center>
	</div>
	
	<div class="alert alert-danger col-md-12" id="deactivate-fail" style="display: none ">
	<center> <strong> Error while deactivating the sensor. Please try again </strong></center>
	</div>
	
	<div class="hold-transition skin-blue sidebar-mini">
  		<div>
  		 	<div class="">
  		 		 <h2 style="margin-left:43%"> Sensor List </h2> 
  		 	</div>
  			<div class="col-lg-12 col-xs-12">
			  		<div class="widget">
		      			<div class="widget-header">
		      				<i class="icon-add"></i>
		      				<h3>Sensor List</h3>
						</div> <!-- /widget-header -->
	  					 <div class="widget-content">
 		           
			
			
				<div class="row">
							 
							<table class = "table table-striped hover">
						    <tr> 
						    	<th></th>
						    	<th></th>
						       <th colspan="1">#</th>
						       <th colspan="1">Sensor Name</th>
						       <th colspan="1">Sensor Owner</th>
						        <th colspan="1">Sensor Registered</th>
						       <th colspan="1">Status</th>
						       <th colspan="1">Delete</th>
						       <th colspan="1">Activate / Inactivate</th>
						       <th>details</th>
						    </tr>
						    <tbody>
						       <tr ng-repeat="sensor in sensorsList" ng-click="go(sensor)">  
						       	  <td></td>
						       	  <td></td>
						          <td>{{$index+1}}</td>
						          <td>{{sensor.sensorName}}</td>
						           <td>{{sensor.user}}</td>
						           <td>{{sensor.create_date}}</td>
						          <td>{{sensor.activate}}</td>
						          <td><input type="button" class="btn btn-danger" value="delete" ng-click="deleteSensor(sensor)" style="width:100%;"/></td>  
						          <td ng-if="sensor.activate == 'active'"> <input type="button" class="btn btn-warning" value="De-activate" ng-click="deactivateSensor(sensor)" style="width:100%;"/></td>
						          <td ng-if="sensor.activate == 'inactive'"> <input type="button" class="btn btn-success" value="Activate" ng-click="activateSensor(sensor)" style="width:100%;"/></td>
						          <td><button style="" class="btn-primary" data-toggle="modal" data-target="#accidentinfopopup" ng-click="go(sensor)">Sensor Details</button></td>
						       </tr>                     
						    </tbody>
						 </table>
						 <br>
						 
					</div>
				</div>
				<div class="row">
					<div class="col-lg-12 col-xs-12">
						<center>	 
							<div id="showDetails"></div>
						</center>
					</div>
				</div>
			</div>
		</div>
	</div>
 </div>
 
  <div class="modal fade" id="accidentinfopopup" role="dialog">
		    <div class="modal-dialog">
		    
		      <!-- Modal content-->
		      <div class="modal-content">
		        <div class="modal-header">
		          <button type="button" class="close" data-dismiss="modal">&times;</button>
		          <h4 class="modal-title">Enter Card Details</h4>
		        </div>
		         <div class="modal-body">
			        <div class="demo-container">
				        <div class="card-wrapper"></div>
								<br><br>
							   
						        <div class="form-container active">
							            <form action="">
							            	<div class="form-group">
							            	<label for="speeddata">Speed:</label>
							                <input placeholder="Card number" type="text" name="speeddata" class="form-control ng-model="speeddata">
							                </div>
											<div class="form-group">
											<label for="firstname">Camera:</label>
							               	 <input placeholder="Full name" type="text" name="cameradata" class="form-control" ng-model="cameradata">
							                </div>
							                <div class="form-group">
							                	<label for="firstname"> Location:</label>
							               		<input placeholder="MM/YY" type="text" name="locationdata" class="form-control" ng-model="locationdata">
							                </div>
							               
							            </form>
						        </div>
					    </div>
			        </div>
		      
		    	</div>  
        
